<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorRealWhite"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/colorOrange"
        >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bottomSheetImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_store_white_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:civ_border_width="2dp"
        android:tint="@color/colorRealWhite"
        app:civ_border_color="@color/colorRealWhite"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분류"
        android:layout_marginLeft="30dp"
        android:textSize="24dp"
        android:textColor="@color/colorRealWhite"
        android:id="@+id/bottomSheetClass"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:id="@+id/bottomSheetName"
        android:text="시설이름"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetClass"
        app:layout_constraintLeft_toLeftOf="@id/bottomSheetClass"
        android:textColor="@color/colorRealWhite"
        />
        <TextView
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/bottomSheetName"
            app:layout_constraintLeft_toLeftOf="@id/bottomSheetName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:maxLines="3"
            android:id="@+id/address"
            android:textColor="@color/colorRealWhite"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorRealWhite"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnShowDetail"
            android:background="@color/colorRealWhite"
            android:tint="@color/colorOrange"
            android:src="@drawable/ic_find_in_page_24px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnFindWay1"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세정보 보기"
            android:textColor="@color/colorRealBlack"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnShowDetail"
            app:layout_constraintLeft_toLeftOf="@id/btnShowDetail"
            app:layout_constraintRight_toRightOf="@id/btnShowDetail"
            />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnFindWay1"
            app:layout_constraintLeft_toRightOf="@id/btnShowDetail"
            app:layout_constraintRight_toLeftOf="@id/btnCloseBottomSheet"
            app:layout_constraintTop_toTopOf="@id/btnShowDetail"
            android:background="@color/colorRealWhite"
            android:src="@drawable/ic_action_mylocation"
            android:scaleType="centerCrop"
            android:tint="@color/colorOrange"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="길 찾기"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/colorRealBlack"
            app:layout_constraintLeft_toLeftOf="@id/btnFindWay1"
            app:layout_constraintRight_toRightOf="@id/btnFindWay1"
            app:layout_constraintTop_toBottomOf="@id/btnFindWay1"
            />
        <ImageButton
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnShowDetail"
            android:src="@drawable/ic_close_24px"
            android:background="@color/colorRealWhite"
            android:tint="@color/colorOrange"
            app:layout_constraintLeft_toRightOf="@id/btnFindWay1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:id="@+id/btnCloseBottomSheet"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="닫기"
            android:textColor="@color/colorRealBlack"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnShowDetail"
            app:layout_constraintLeft_toLeftOf="@id/btnCloseBottomSheet"
            app:layout_constraintRight_toRightOf="@id/btnCloseBottomSheet"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>