<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NearbyFacility">



    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/fab_Sub1"
        app:icon="@drawable/ic_store_white_24dp"
        android:backgroundTint="@color/colorLightSkyBlue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:theme="@style/MaterialTheme"
        android:text="@string/ConStore"
        android:textColor="#fff"
        app:iconTint="#fff"
        app:iconSize="30dp"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/fab_Sub2"
        app:icon="@drawable/ic_accessible_24px"
        android:backgroundTint="@color/colorLightSkyBlue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:theme="@style/MaterialTheme"
        android:text="@string/welfare"
        android:textColor="#fff"
        app:iconTint="#fff"
        app:iconSize="30dp"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/fab_Sub3"
        app:icon="@drawable/ic_local_dining_24px"
        android:backgroundTint="@color/colorLightSkyBlue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:theme="@style/MaterialTheme"
        android:text="@string/freeFood"
        android:textColor="#fff"
        app:iconTint="#fff"
        app:iconSize="30dp"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/fab_Main"
        app:icon="@drawable/ic_help_24px"
        android:backgroundTint="@color/colorLightSkyBlue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:theme="@style/MaterialTheme"
        android:text="@string/selectFac"
        android:textColor="#fff"
        app:iconTint="#fff"
        app:iconSize="30dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_action_mylocation"
        android:backgroundTint="@color/colorOrange"
        android:id="@+id/btnMyLocation"
        />



</androidx.constraintlayout.widget.ConstraintLayout>